{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {},
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "index.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "tests/**/*.test.ts",
        "tests/script-test.ts",
        "lib",
        "dist",
        "jest.config.ts"
    ]
}